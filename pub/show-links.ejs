<script 
src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" 
integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" 
crossorigin="anonymous"></script>
<link rel="stylesheet" href="/style.css">

<div class="col-xs-12 col-lg-10 col-lg-offset-1">
  <div style="margin-top: 20px;">&nbsp;</div>
  <h2>
    Here is the list of your current connections:
    <a href="/" class="btn btn-default" style="float: right;">Log out</a>
  </h2>
  <div style="margin-top: 20px;">&nbsp;</div>
  <table class="table table-striped">
    <thead>
      <th>Beeminder goal</th>
      <th>Data source</th>
      <th>Parameters</th>
      <th>Last updated</th>
      <th>Last value</th>
      <th>&nbsp;</th>
    </thead>
    <tbody>
      <% usergoals.forEach(function(usergoal){ %>
      <tr>
        <td><%= usergoal.goal %></td>
        <td><%= connections[usergoal.linktype]['name'] %></td>
        <td><%= usergoal.params %></td>
        <td><%= usergoal.last_updated %></td>
        <td><%= usergoal.score %></td>
        <td><a href="/delete-link?id=<%= usergoal.id %>">Delete</a></td>
      </tr>
      <% }); %>
      <% if (usergoals.length==0) { %>
      <tr>
        <td colspan="6" style="text-align: center;">
          <em>Currently you have no active links</em>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <div style="margin-top: 20px;">&nbsp;</div>
  <div class="col-xs-2 col-xs-offset-5" style="text-align: center;">
    <form action="/setup-link" method="POST">
      <input class="btn btn-primary" name="linktype" type="hidden" 
             value="projecteuler"/>
      <input class="btn btn-primary" type="submit" value="Add new goal"/>
    </form>
  </div>
</div>